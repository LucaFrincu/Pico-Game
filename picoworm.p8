pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
x, y = 64, 64

hist_x = {}
hist_y = {}


function _draw()
	cls()
	for i=1,10 do
		circ(hist_x[i],hist_y[i],i+2,i)
	end
	print(#hist_x..' '..hist_x[1])
end

function _update()
	if (btn(⬆️)) y-=3
	if (btn(⬇️)) y+=3
	if (btn(⬅️)) x-=3
	if (btn(➡️)) x+=3
	
	add(hist_x, x)
	add(hist_y, y)
	if (#hist_x > 10) then
		deli(hist_x, 1)
		deli(hist_y, 1)
	end
end
